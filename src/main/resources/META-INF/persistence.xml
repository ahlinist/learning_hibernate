<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">
    <persistence-unit name="hello" transaction-type="RESOURCE_LOCAL">
        <!-- Persistence provider -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entity classes -->
        <class>hello.Message</class>

        <properties>
            <!-- The JDBC URL to the database instance -->
            <property name="javax.persistence.jdbc.url"
                value="jdbc:mysql://localhost:3306/hello_world?useSSL=false&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC" />

            <!-- The database username -->
            <property name="javax.persistence.jdbc.user" value="root" />

            <!-- The database password -->
            <property name="javax.persistence.jdbc.password" value="" />

            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
        </properties>
    </persistence-unit>
</persistence>
